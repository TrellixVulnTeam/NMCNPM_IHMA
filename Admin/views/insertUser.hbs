<div class="content">
    <div class="mr-3 border">
        <div class="row h-100 m-auto bg-light ">
            <div class="container-fluid">
                <div class="row profile">
                    <h4 class="text-info">Thêm giáo viên, sinh viên vào lớp học</h4>
                </div>
                <div class="row m-3">
                    <form class="myForm" method="POST" action="/admin/insertUser">
                        <div class="form-group row">
                            <label for="code" class="col-md-4">Mã số <i class="text-danger">(*)</i></label>
                            <input type="text" class="col-md-8 form-control" id="code" name="code" required>
                        </div>
                        <h5>{{message}}</h5>
                        <div class="row text-center">
                            <div class="col-md-8">
                                <button type="submit" class="btn btn-success mr-3">Thêm</button>
                                <a type="button" class="btn btn-warning" href="/admin/classList">Hủy</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{{#section 'style' }}
    <style>
        * { margin: 0; padding: 0}

        .profile {
            font-size: 35px;
            margin: 15px;
            padding: 20px 0px;
        }

        .content {
            margin: 50px 20px;
        }

        ul li {
            list-style: none;
        }

        .myForm {
            width: 60%;
            line-height: 35px
        }

    </style>
{{/section}}
   
{{#section 'nav' }}
    <div class="dropdown text-right">
        <button class="btn dropdown-toggle text-white font-weight-bold" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-expanded="false">
            <span class="username mr-2">{{admin.name}}</span>
            <span><i class="fas fa-user"></i></span>
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item userInfo" href="/admin/profile">
                <span class='mr-1'><i class="far fa-user-circle"></i></span>
                Thông tin cá nhân
            </a>
            <a class="dropdown-item logOut" href="/admin/signin">
                <span class='mr-1'><i class="fas fa-sign-out-alt"></i></span>
                Đăng xuất
            </a>
        </div>
    </div>
{{/section}}

{{#section 'info' }}
    <div class="information row mt-5">
        <div class="col-md">
            <div class="card">
                <div class="card-body">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin/home">Trang chủ</a></li>
                            <li class="breadcrumb-item"><a href="/admin/classList">Tất cả khóa học</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Thêm sinh viên, giáo viên vào lớp học</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- hết information -->
{{/section}}