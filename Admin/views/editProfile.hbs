<div class="content">
    <div class="mr-3 border">
        <div class="row h-100 m-auto bg-light ">
            <div class="container-fluid">
                <div class="row profile">
                        <h4 class="text-info">Chi tiết người dùng</h4>
                </div>
                <div class="row m-3">
                    <form class="myForm" method="POST">
                        <div class="form-group row">
                            <label for="firstname" class="col-md-4">Họ và tên <i class="text-danger">(*)</i></label>
                            <textarea type="text" class="col-md-8 form-control" id="firstname" name="name" required>{{admin.name}}</textarea>
                        </div>
                        <div class="form-group row">
                            <label for="email" class="col-md-4">Email <i class="text-danger">(*)</i></label>
                            <input type="email" class="col-md-8 form-control" id="email" name="email" value={{admin.email}}>
                        </div>
                        <div class="form-group row">
                            <label for="gender" class="col-md-4">Giới tính <i class="text-danger">(*)</i></label>
                            <input type="gender" class="col-md-8 form-control" id="gender" name="gender" value={{admin.gender}}>
                        </div>
                        <div class="form-group row">
                            <label for="address" class="col-md-4">Địa chỉ <i class="text-danger">(*)</i></label>
                            <textarea type="address" class="col-md-8 form-control" id="address" name="address" >{{admin.address}}</textarea>
                        </div>
                        <div class="row text-center">
                            <div class="col-md-4"></div>
                            <div class="col-md-8">
                                <button type="submit" class="btn btn-success mr-3">Cập nhật</button>
                                <a type="button" class="btn btn-warning" href="/admin/profile">Hủy</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{{#section 'style' }}
    <style>
        * { margin: 0; padding: 0}

        .profile {
            font-size: 35px;
            margin: 15px;
            padding: 20px 0px;
        }

        .content {
            margin: 50px 20px;
        }

        ul li {
            list-style: none;
        }

        .myForm {
            width: 60%;
            line-height: 35px
        }

    </style>
{{/section}}
   
{{#section 'nav' }}
    <div class="dropdown text-right">
        <button class="btn dropdown-toggle text-white font-weight-bold" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-expanded="false">
            <span class="username mr-2">{{admin.name}}</span>
            <span><i class="fas fa-user"></i></span>
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item userInfo" href="/admin/profile">
                <span class='mr-1'><i class="far fa-user-circle"></i></span>
                Thông tin cá nhân
            </a>
            <a class="dropdown-item logOut" href="/admin/signin">
                <span class='mr-1'><i class="fas fa-sign-out-alt"></i></span>
                Đăng xuất
            </a>
        </div>
    </div>
{{/section}}

{{#section 'info' }}
    <div class="information row mt-5">
        <div class="col-md">
            <div class="card">
                <div class="card-body">
                    <h3><i class="fas fa-user"></i> {{admin.name}}</h3>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin/home">Trang chủ</a></li>
                            <li class="breadcrumb-item"><a href="/admin/profile">Thông tin cá nhân</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa thông tin cá nhân</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- hết information -->
{{/section}}
