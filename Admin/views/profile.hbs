<div class="content">
    <div class="leftCol mr-3 border">
        <div class="row h-100 m-auto bg-light ">
            <div class="container-fluid">
                <div class="row profile">
                    <h4 class="text-info">Chi tiết người dùng</h4>
                </div>
                <div class="row mx-3">
                    <form class="myForm" method="POST", action="/admin/profile?i={{admin._id}}">
                                <div class="form-group row">
                                    <label for="email" class="col-md-3">Họ và tên <i class="text-danger">(*)</i></label>
                                    <textarea type="text" class="col-md-8 form-control" id="lastname" name="name" >{{admin.name}}</textarea>
                                </div>
                                <div class="form-group row">
                                    <label for="email" class="col-md-3">Email <i class="text-danger">(*)</i></label>
                                    <input type="text" class="col-md-8 form-control" id="lastname" name="email" value={{admin.email}}>
                                </div>
                                <div class="form-group row">
                                    <label for="email" class="col-md-3">Giới tính<i class="text-danger">(*)</i></label>
                                    <input type="text" class="col-md-8 form-control" id="lastname" name="gender" value={{admin.gender}}>
                                </div>
                                <div class="form-group row">
                                    <label for="email" class="col-md-3">Địa chỉ <i class="text-danger">(*)</i></label>
                                    <textarea type="text" class="col-md-8 form-control" id="lastname" name="address" >{{admin.address}}</textarea>
                                </div>
                                <div class="form-group-now">
                                    <h5>{{message1}}</h5>
                                </div>
                                <div class="row text-center">
                                    <div class="col-md-4"></div>
                                    <div class="col-md-8">
                                        <button type="submit" class="btn btn-success mr-3">Cập nhật</button>
                                        <button type="reset" class="btn btn-warning">Thoát</button>
                                    </div>
                                </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="rightCol">
        <div class="row mb-3">
            <div class="col-md">
                <div class="card">
                    <div class="card-header">
                        <h3>Liên kết</h3>
                    </div>
                    <div class="card-body">
                        <ul>
                            <li><a href="">1.</a></li>
                            <li><a href="">2.</a></li>
                            <li><a href="">3.</a></li>
                            <li><a href="">4.</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row my-3">
            <div class="col-md">
                <div class="card">
                    <div class="card-header">
                        <h3>Tài khoản</h3>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{admin.name}}</h5>
                        <span>Địa chỉ thư điện tử:</span>
                        <a href="">{{admin.email}}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{#section 'style' }}
    <style>
        * { margin: 0; padding: 0}

        .profile {
            font-size: 35px;
            margin: 15px;
            padding: 20px 0px;
        }

        .content {
            display: grid;
            grid-template-columns: 1fr 300px;
            margin: 50px 20px;
        }

        ul li {
            list-style: none;
        }

        .myForm {
            width: 60%;
            line-height: 35px
        }

    </style>
{{/section}}
   
{{#section 'nav' }}
    <div class="dropdown text-right">
        <button class="btn dropdown-toggle text-white font-weight-bold" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-expanded="false">
            <span class="username mr-2">{{admin.name}}</span>
            <span><i class="fas fa-user"></i></span>
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item userInfo" href="adminPersonal.html">
                <span class='mr-1'><i class="far fa-user-circle"></i></span>
                Thông tin cá nhân
            </a>
            <a class="dropdown-item logOut" href="#">
                <span class='mr-1'><i class="fas fa-sign-out-alt"></i></span>
                Đăng xuất
            </a>
        </div>
    </div>
{{/section}}

{{#section 'info' }}
    <div class="information row mt-5">
        <div class="col-md">
            <div class="card">
                <div class="card-body">
                    <h3><i class="fas fa-user"></i> {{admin.name}}</h3>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="adminHome.html">Trang chủ</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Thông tin cá nhân</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- hết information -->
{{/section}}
